@{
    ViewBag.Title = "Lista de Inmobiliarias";
}

<div class="row-fluid metro">
    <div class="span12">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Direccion</th>
                    <th>Detalles</th>
                    <th>Manager</th>
                    <th>Casas</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr> 
                        <td>@m.Address</td>
                        <td>@m.Details</td>
                        <td>@m.ManagerName</td>
                        <td><a href="@Url.Action("Edit", "House", new {id=0, realtyId = m.Id })">
                                <span class="win-label">Add</span>
                            </a>&nbsp;
                            <a href="@Url.Action("Index", "House", new {realtyId = m.Id })">
                                <span class="win-label">Watch</span>
                            </a>&nbsp;
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","Realty", new { id = m.Id })">
                                <span class="icon icon-pencil"/>
                            </a>&nbsp;
                            <a href="@Url.Action("Delete", "Realty", new { id = m.Id })">
                                <span class="icon icon-remove-3"/>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<footer class="win-ui-dark win-commandlayout navbar-fixed-bottom">
    <div class="container">
        <div class="row-fluid metro">
            <div class="span1 offset10">
                <table class="table table-condensed">
                    <tbody>
                        <tr>
                            <td>
                                <a class="win-command" href="@Url.Action("Edit", "Realty", new {id = 0})"> <!-- ID = 0 -> New user-->
                                    <span class="win-commandimage win-commandring">&#xe03e;</span>
                                    <span class="win-label">Add</span>
                                </a>
                            </td>
                            <td>
                                <a class="win-command" href="@Url.Action("Index", "Home")">
                                    <span class="win-commandimage win-commandring">&#xe1cd;</span> 
                                    <span class="win-label">Volver</span>
                                </a>
                            </td>
                        </tr>
                </tbody>
                </table>
            </div>
        </div>
    </div>
</footer>

