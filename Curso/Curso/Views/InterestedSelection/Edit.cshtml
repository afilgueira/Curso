@model Curso.ViewModels.HouseViewModel


@{
    ViewBag.Title = "Interesados";
}

<div class="row-fluid metro">
    <div class="span2 offset4">
        @using (Html.BeginForm("Update", "InterestedSelection", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.ValidationSummary(true)
            <div class="control-group">
                <label class="control-label">Interesado</label>
                <div class="controls">
                    @Html.DropDownListFor(model => Model.InterestedId, Model.InterestedsList, new { @class = "chzn-select" })
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="@Url.Action("Index", "Realty")"><button type="button" class="btn">Cancelar</button></a>
            </div>
        }
    </div>
</div>


<script type="text/javascript">
    $(".chzn-select").chosen({ no_results_text: "No results matched" });
</script>