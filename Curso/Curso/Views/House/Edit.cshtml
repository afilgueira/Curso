@model Curso.ViewModels.HouseViewModel

@{
    ViewBag.Title = "Casa";
}

<div class="row-fluid metro">
    <div class="span2 offset4">
        @using (Html.BeginForm("Update", "House", FormMethod.Post))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.RealtyId)
            @Html.ValidationSummary(true)
            <div class="control-group">
                <label class="control-label">Direccion</label>
                <div class="controls">
                    @Html.EditorFor(model => model.Address)
                    
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Detalles</label>
                <div class="controls">
                    @Html.EditorFor(model => model.Details)
                    
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="@Url.Action("Index", "Realty")"><button type="button" class="btn">Cancelar</button></a>
            </div>
        }
    </div>
</div>